<h1>New Game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
    <br>
  <% end %>
</ul>

<form action="/score" method="POST" data-turbo="false">
  <label for="game">What is the longest word you can find?</label>
  <input type="text" id="game" name="word">

  <!-- IMPORTANT: pass the letters -->
  <input type="hidden" name="letters" value="<%= @letters.join(' ') %>">
  
  <!-- CSRF token -->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <input type="submit" value="Play">
</form>
